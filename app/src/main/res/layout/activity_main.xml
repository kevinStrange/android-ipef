<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="@string/wifi_hint"
        android:textSize="30dp"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_wifi_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_address"
            android:textColor="#222"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/wifi_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_wifi_throughput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_throughput_show"
            android:textColor="#222"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/wifi_throughput_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_wifi_signal_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_signal_strength"
            android:textColor="#222"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/wifi_signal_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textSize="30dp"/>
    </LinearLayout>
</LinearLayout>